<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.steelrain.lilac.batch.mapper.YoutubeMapper">
    <insert id="insertYoutubeChannelInfo" useGeneratedKeys="true" keyProperty="id" parameterType="ChannelDTO">
        INSERT INTO tbl_youtube_channel(channel_id, title, description, publish_date, view_count,
                                        subscriber_count, subscriber_count_hidden, video_count, branding_keywords, thumbnail_medium, thumbnail_high) VALUES
            (#{channelId}, #{title}, #{description}, #{publishDate}, #{viewCount},
             #{subscriberCount}, #{subscriberCountHidden}, #{videoCount}, #{brandingKeywords}, #{thumbnailMedium}, #{thumbnailHigh})
    </insert>

    <insert id="insertYoutubePlaylist" useGeneratedKeys="true" keyProperty="id" parameterType="PlayListDTO">
        INSERT INTO tbl_youtube_playlist(playlist_id,channel_id_fk,title,publish_date,thumbnail_medium,thumbnail_high,item_count,channel_id) VALUES
        <foreach item="item" collection="list" separator=",">
            (#{item.playListId},#{item.channelIdFk},#{item.title},#{item.publishDate},#{item.thumbnailMedium},#{item.thumbnailHigh},#{item.itemCount},#{item.channelId})
        </foreach>
    </insert>

    <insert id="insertYoutubeVideoList" useGeneratedKeys="true" keyProperty="id" parameterType="VideoDTO">
        INSERT IGNORE INTO tbl_youtube(channel_id,youtube_playlist_id,video_id,title,description,
                                publish_date,thumbnail_medium,thumbnail_high,view_count,search_count,
                                playlist_id,like_count,favorite_count,comment_count,duration,score,magnitude) VALUES
            <foreach item="item" collection="list" separator=",">
                (#{item.channelId},#{item.youtubePlaylistId},#{item.videoId},#{item.title},#{item.description},
                #{item.publishDate},#{item.thumbnailMedium},#{item.thumbnailHigh},#{item.viewCount},#{item.searchCount},
                #{item.playlistId},#{item.likeCount},#{item.favoriteCount},#{item.commentCount},#{item.duration},#{item.score},#{item.magnitude})
            </foreach>
    </insert>
